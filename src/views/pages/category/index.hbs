<a href="category/new" class="btn btn-primary pull-right btn-sm">Agregar nueva Categoria</a>
<br><br>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3>Categorias de Productos</h3>
            </div>
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                    </tr>
                    {{#each categories}}
                        <tr>
                            <td>{{ @index }}</td>
                            <td>{{ name }}</td>
                            <td>{{ description }}</td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>