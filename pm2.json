{
	"apps": [{
		"name": "ControlARC",
		"script": "./src/server.js",
		"port": "5555",
		"watch": "./src",
		"ignore_watch": [
			"./src/stylus",
			"./src/public"
		],
		"watch_options": {
			"usePolling": true
		},
		"error_files": "./logs/app-error.log",
		"out_files": "./logs/app-out.log",
		"env": {
			"NODE_ENV": "development"
		},
    "node_args" : "--harmony"
	}]
}